{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "src/main/**/*.ts",
        "src/main/**/*.tsx"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "files": [
        "src/main/app.ts",
        "src/main/gitview/components/pulls.ts",
        "src/main/gitview/index.ts",
        "src/main/gitview/raw-types.ts",
        "src/main/gitview/services/pulls.ts",
        "src/main/gitview/services/raw.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
